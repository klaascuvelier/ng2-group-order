{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "module": "es2015",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "out",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.*"
  ],
  "exclude": [
    "out",
    "node_modules",
    "dist",
    "reports",
    "src/**/*.ngfactory.ts",
    "src/**/*.spec.ts"
  ]
}
